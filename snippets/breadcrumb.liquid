{% if template contains 'index' or template contains 'collection' or template contains 'product' %}
    
{% else %}
    <style>body .g-breadcrumb,body .g-breadcrumb a{font-weight:600;font-size:12px;line-height:20px}body .g-breadcrumb{background:#F9F9FA;text-transform:uppercase;color:#b1b1bc}body .g-breadcrumb a{color:#646473}body .g-breadcrumb a,body .g-breadcrumb span{font-weight:400}@media screen and (max-width: 1199px){body .g-breadcrumb,body .g-breadcrumb a{font-size:11px}body .g-breadcrumb.breadcrumbs-style_1{padding:10px 0}body .g-breadcrumb a,body .g-breadcrumb span{line-height:1.6}}@media screen and (max-width: 989px){body .g-breadcrumb,body .g-breadcrumb a{font-size:10px}body .g-breadcrumb.breadcrumbs-style_1{padding:5px 0}}@media screen and (max-width: 749px){body .g-breadcrumb,body .g-breadcrumb a{font-size:9px}}</style>
{% endif %}
<link rel="stylesheet" data-href="{{ 'breadcrumb.css' | asset_url }}">
{% unless template == 'index' or template == 'cart' or template == 'list-collections' %}
<style>
  .g-breadcrumb{
    flex-direction: column;
    color:{{settings.color_breadcrumbs}} ;
    padding:40px 0;
    margin:0;
    background:{{settings.bg_breadcrumb}};}
  .g-breadcrumb.breadcrumbs-style_1{padding:12px 0;}
  .g-breadcrumb a,.g-breadcrumb span{
    padding:0 3px;line-height:20px;display:inline-block; 
    font-family: Red Hat Display; font-weight: bold; }
  .g-breadcrumb a{
    color:{{settings.color_breadcrumbs_active}};
    text-decoration: none;
  }
  .g-breadcrumb .container,.g-breadcrumb .container-fluid{z-index: 2;position: relative;}
  .g-breadcrumb.breadcrumbs-style_2{
    padding:120px 0;
    background: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
  }
  @media (max-width:576px) {
    .g-breadcrumb.breadcrumbs-style_2{
      padding: 50px 0;
    }
    .g-breadcrumb.breadcrumbs-style_2 h3{
      font-size: 26px;
    }
  }
  .g-breadcrumb.breadcrumbs-style_2::before{
    background:rgba(0,0,0,{{settings.limit_ranger}});
    position: absolute;
    z-index: 1;
    content:"";
    left: 0;
    right: 0;
    bottom:0;
    top: 0;
  }
  .br-title{
    color:{{settings.color_breadcrumbs}}
  }
  .br-title svg{
    width: 23px;
    height: 23px;
  }

</style>
{% assign bgimage = settings.img_breadcrumb %}
{%comment%}
{% if template contains 'collection' and collection.handle %}
  {% assign bgimage = collection.image.src %}
  {% if collection.image.src == blank %}
    {% assign bgimage = settings.img_breadcrumb %}
  {% endif %}
{% elsif template contains 'product' and collection.handle %}	
  {% assign bgimage = collection.image.src %}
{% endif %}
{%endcomment%}
<div class="{{settings.layout_bread}}">
<nav class="breadcrumbs-{{settings.style_breadcrumb}} breadcrumb g-breadcrumb lazyload text-{{settings.align_bread}}" role="navigation" aria-label="breadcrumbs" {% unless settings.style_breadcrumb == "style_1" %}data-bgset="{%- include 'bgset', image: bgimage -%}"  data-sizes="auto"
data-parent-fit="cover" {% endunless%}>
  <div class="{{settings.layout_bread}}">
  {% if settings.show_title_breadcumbs %}
    {% if template contains 'collection' and collection.handle %}
    <h3 class="font-family-2 mb-2 h1 br-title">{{ collection.title }}</h3>
    {% elsif template contains 'page' %}
    <h3 class="mb-2 h1 br-title font-family-2">{{ page.title }}</h3>
    {% elsif template contains 'product' and collection.handle %}	
      <h3 class="mb-2 h1 br-title font-family-2">{{ page.title }}</h3>
    {% elsif template contains 'blog' %}	
      <h3 class="mb-2 h1 br-title font-family-2">{{ blog.title }} {%- include 'icon-rss' -%}</h3>
    {% endif %}
  {% endif %}
  </div>
  <div class="{%if settings.layout_bread == "full"%}container page-width{%else%}{{settings.layout_bread}}{%endif%}">
    <a href="/" title="Home">Home</a>
    {% if template contains 'page' %}
    <span aria-hidden="true">—</span>
    <span>{{ page.title }}</span>
    {% elsif template contains 'product' %}
    {% if collection.url %}
    <span aria-hidden="true">—</span>
    {{ collection.title | link_to: collection.url }}
    {% endif %}
    <span aria-hidden="true">—</span>
    <span>{{ product.title }}</span>
    {% elsif template contains 'collection' and collection.handle %}
    <span aria-hidden="true">—</span>
    {% if current_tags %}
    {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
    {{ collection.title | link_to: url }}
    <span aria-hidden="true">—</span>
    <span>{{ current_tags | join: " + " }}</span>
    {% else %}
    <span>{{ collection.title }}</span>
    {% endif %}
    {% elsif template == 'blog' %}
    <span aria-hidden="true">—</span>
    {% if current_tags %}
    {{ blog.title | link_to: blog.url }}
    <span aria-hidden="true">—</span>
    <span>{{ current_tags | join: " + " }}</span>
    {% else %}
    <span>{{ blog.title }}</span>
    {% endif %}
    {% elsif template == 'article' %}
    <span aria-hidden="true">—</span>
    {{ blog.title | link_to: blog.url }}
    <span aria-hidden="true">—</span>
    <span>{{ article.title }}</span>
    {% else %}
    <span aria-hidden="true">—</span>
    <span>{{ page_title }}</span>
    {% endif %}
  </div>
</nav>
</div>
{% endunless %}