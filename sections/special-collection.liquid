{% capture catItems %}
  {% for block in section.blocks %}
    {% if block.settings.img != blank %}
    <div class="spec-coll-item">

      {% if block.settings.btn != blank and block.settings.btnurl != blank %}
      <a class="navigate-link" href="{{ block.settings.btnurl }}"></a>
      {% endif %}
      
      {% if block.settings.img != blank %}
        <figure class="coll-img">
          <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-class="LazyLoad" data-src="{{ block.settings.img | img_url:"master" }}" />
        </figure>
      {% endif %}
      {% if block.settings.title != blank or block.settings.text != blank %}
      <div class="content">
         {% if block.settings.text != blank %}<span class="offer-label">{{ block.settings.text }}</span>{% endif %}
         {% if block.settings.title != blank %}<h3 class="coll-title">{{ block.settings.title }}</h3>{% endif %}
      </div>
      {% endif %}
      {% if block.settings.btn != blank and block.settings.btnurl != blank %}
      <a href="{{ block.settings.btnurl }}" class="shop-now-btn">{{ block.settings.btn }} {% render 'right-arrow' %}</a>
      {% endif %}
    </div>
    {% endif %}
  {% endfor %}
{% endcapture %}

{% if catItems != blank %}
{% if template contains 'index' or template contains 'collection' or template contains 'product' %}
    
{% else %}
    <style>.special-collection-list{width:100%;display:flex}.special-collection-list .spec-coll-item{background:#F9F9FA;border-radius:10px 10px 0 0;margin-right:20px;padding-top:50px;width:100%;max-width:590px;position:relative}.special-collection-list .spec-coll-item .navigate-link{display:block;position:absolute;width:100%;height:100%}.special-collection-list .spec-coll-item .coll-img{display:flex;justify-content:center;width:100%;margin:0}.special-collection-list .spec-coll-item .coll-img img{height:221px;width:auto;max-width:80%;object-fit:contain}.special-collection-list .spec-coll-item .content{padding:44px 45px 40px;display:flex;flex-flow:column}.special-collection-list .spec-coll-item .content .offer-label{font-style:normal;font-weight:800;font-size:16px;line-height:21px;margin:0 0 11px;letter-spacing:.01em;text-transform:uppercase;color:#aa3028}.special-collection-list .spec-coll-item .content .coll-title{font-style:normal;font-weight:800;font-size:26px;line-height:34px;color:#252222;margin:0;max-width:426px}.special-collection-list .spec-coll-item .shop-now-btn{background:#AA3028;font-style:normal;font-weight:800;font-size:16px;line-height:21px;letter-spacing:.03em;color:#fff;display:flex;justify-content:space-between;padding:17px 45px;text-decoration:none;position:relative;z-index:1}.special-collection-list .spec-coll-item .shop-now-btn:hover{background:#252222}@media screen and (max-width: 749px){.special-collection-list{width:auto;display:flex;margin-right:-20px}.special-collection-list .spec-coll-item{border-radius:15px 15px 0 0;margin-right:10px;padding-top:44px;width:100%;max-width:310px;position:relative}.special-collection-list .spec-coll-item .coll-img img{height:121px}.special-collection-list .spec-coll-item .content{padding:60px 30px 30px}.special-collection-list .spec-coll-item .content .offer-label{font-style:normal;font-weight:800;font-size:12px;line-height:16px;letter-spacing:.01em;margin:0 0 10px}.special-collection-list .spec-coll-item .content .coll-title{font-style:normal;font-weight:800;font-size:17px;line-height:23px;max-width:250px}.special-collection-list .spec-coll-item .shop-now-btn{padding:12.5px 30px;font-style:normal;font-weight:800;font-size:14px;line-height:19px;letter-spacing:.03em}}</style>
{% endif %}
<link rel="stylesheet" data-href="{{ 'special-collection.css' | asset_url }}">
<noscript>{{ 'special-collection.css' | asset_url | stylesheet_tag }}</noscript>

<section id="section{{ section.id }}">
  <div class="page-width">
    <div class="special-collection-list">
      {{ catItems }}
    </div>     
  </div>
</section>
{% endif %}
 
<script type="lazyload_int">
  $(document).ready(function(){

    if($(window).width() <= 749){
      
      $('.special-collection-list').slick({
        dots: false,
        infinite: false,
        arrows: false,
        speed: 300,
        slidesToShow: 1,
        slidesToScroll: 1,
        variableWidth: true       
     });
      
    }
      
  });
</script>
 

{% schema %}
  {
    "name": "Special Collection",
    "class": "section-space special-collection-wrapper",
    "settings": [],
    "blocks": [
        {
          "type": "text",
          "name": "Category",
          "limit":2,
          "settings": [
            {
              "type": "image_picker",
              "id": "img",
              "label": "Image"
            },
            { 
              "type": "text",
              "id": "text",
              "label": "Text before Title",
              "default":"Sale up to 50%"
            },
            {
              "type": "text",
              "id": "title",
              "label": "Title",
              "default":"Lorem ipsum dolor sit amet consectetur"
            },
            { 
              "type": "text",
              "id": "btn",
              "label": "Button Label",
              "default":"Shop now"
            },
            { 
              "type": "url",
              "id": "btnurl",
              "label": "Url to Navigate"
            }
        ]
      }
    ],
    "presets": [
      {
        "name": "Special Collection"        
      }
    ]
  }
{% endschema %}

